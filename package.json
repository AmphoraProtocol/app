{
  "name": "amphora-ui",
  "private": true,
  "version": "0.0.0",
  "config": {},
  "homepage": ".",
  "scripts": {
    "build": "tsc && vite build",
    "fork": "anvil -f https://eth.llamarpc.com --fork-block-number 16784744 --chain-id 1337",
    "dev": "vite",
    "preview": "vite preview",
    "abi": "cp -r ../contracts/typechain-types/* ./src/chain/contracts",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "npx eslint ./src/",
    "lint:fix": "npm run lint -- --fix",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky install && wonderland-crypto-husky-checks install"
  },
  "dependencies": {
    "@emotion/react": "11.9.0",
    "@emotion/styled": "11.10.6",
    "@esbuild-plugins/node-globals-polyfill": "0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "0.2.2",
    "@ethersproject/abi": "5.6.3",
    "@ethersproject/providers": "5.6.8",
    "@mui/material": "5.8.2",
    "@mui/system": "5.8.2",
    "@rainbow-me/rainbowkit": "0.12.4",
    "@reduxjs/toolkit": "1.9.3",
    "chroma.ts": "1.0.10",
    "ethers": "5.6.8",
    "lodash": "4.17.21",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-redux": "8.0.5",
    "react-router": "6.3.0",
    "react-router-dom": "6.3.0",
    "redux-logger": "3.0.6",
    "rollup-plugin-polyfill-node": "0.9.0",
    "universal-cookie": "4.0.4",
    "viem": "0.1.21",
    "wagmi": "0.12.7"
  },
  "devDependencies": {
    "@defi-wonderland/crypto-husky-checks": "1.3.0",
    "@types/babel__core": "7.1.19",
    "@types/lodash": "4.14.191",
    "@types/node": "17.0.40",
    "@types/react": "18.0.11",
    "@types/react-dom": "18.0.5",
    "@types/react-redux": "7.1.25",
    "@types/redux-logger": "3.0.9",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "@vitejs/plugin-react": "1.3.2",
    "csstype": "3.1.0",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.4",
    "typescript": "4.7.3",
    "vite": "4.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "src/**/*.{js,jsx,ts,tsx,css,scss,md,html}": "prettier --write --ignore-unknown"
  }
}
